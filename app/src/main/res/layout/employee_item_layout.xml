<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:outlineAmbientShadowColor="#000000">

    <ImageView
        android:id="@+id/btnHotel"
        android:layout_width="389dp"
        android:layout_height="305dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="1dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492"
        app:srcCompat="@drawable/employee_template"
        tools:srcCompat="@drawable/employee_template" />

    <TextView
        android:id="@+id/roleTextView"
        android:layout_width="103dp"
        android:layout_height="19dp"
        android:layout_marginBottom="12dp"
        android:text="EmployeeRol"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/emailTextView"
        app:layout_constraintEnd_toEndOf="@+id/adresseTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/adresseTextView" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="114dp"
        android:layout_height="17dp"
        android:layout_marginBottom="97dp"
        android:text="email@email.com"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnHotel"
        app:layout_constraintEnd_toEndOf="@+id/roleTextView"
        app:layout_constraintStart_toStartOf="@+id/roleTextView" />

    <TextView
        android:id="@+id/nomTextView"
        android:layout_width="107dp"
        android:layout_height="23dp"
        android:layout_marginTop="63dp"
        android:text="Nom"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sinTextView"
        app:layout_constraintEnd_toEndOf="@+id/btnHotel"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="@+id/btnHotel"
        app:layout_constraintTop_toTopOf="@+id/btnHotel"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/sinTextView"
        android:layout_width="103dp"
        android:layout_height="19dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="8dp"
        android:text="999-999-999"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/adresseTextView"
        app:layout_constraintEnd_toEndOf="@+id/btnHotel" />

    <TextView
        android:id="@+id/adresseTextView"
        android:layout_width="173dp"
        android:layout_height="19dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="12dp"
        android:text="123 Avenue"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/roleTextView"
        app:layout_constraintEnd_toEndOf="@+id/btnHotel" />

    <TextView
        android:id="@+id/hAdresseTextView"
        android:layout_width="60dp"
        android:layout_height="13dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:text="123 Avenue"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/nomTextView"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="@+id/btnHotel"
        app:layout_constraintTop_toTopOf="@+id/btnHotel" />

</androidx.constraintlayout.widget.ConstraintLayout>