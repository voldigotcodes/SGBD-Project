<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".makeReservation">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <TextView
        android:id="@+id/nChambre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/hotAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

      <EditText
          android:id="@+id/arr"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:ems="10"
          android:hint="arrive: yyyy/mm/dd"
          android:inputType="textPersonName" />

      <EditText
          android:id="@+id/dep"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:ems="10"
          android:hint="depart: yyyy/mm/dd"
          android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_picker_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#D1D1D1"
        android:orientation="vertical"
        android:padding="16dp">

      <TextView
          android:id="@+id/date_picker_textview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sin_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

      <EditText
          android:id="@+id/sinEdit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:hint="Social Insurance Number :"
          android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

      <EditText
          android:id="@+id/nomClient"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:hint="Enter your name"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

      <EditText
          android:id="@+id/addy"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:hint="address"
          android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_enr_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

      <EditText
          android:id="@+id/date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="date d'enregistrement"
          android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

      <EditText
          android:id="@+id/pass"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="password"
          android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

      <EditText
          android:id="@+id/emailCLient"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:hint="email"
          android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/confirm_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="save"
        android:text="Confirm"
        android:visibility="visible" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>